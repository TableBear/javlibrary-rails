<ul class="breadcrumb">
  <li><%= link_to("Videos", videos_path) %></li>
  <li class="active"><%= @video.video_id %></li>
</ul>
<div class="jumbotron">
  <% video_genres(@video).each do |genre| %>
    <span class="label label-success"><%= genre %></span>
  <% end %>
  <h1><%= @video.video_id  %></h1>
  <p><%= @video.video_name %></p>
  <br>
  <img src="<%= @video.img %>">
  <br>
  <br>
  <% if current_user %>
    <p><%= render 'like' %></p>
  <% end %>
</div>
<h2>Actors</h2>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>#</th>
      <th>ID</th>
      <th>NAME</th>
      <th>LABEL</th>
    </tr>
  </thead>
  <tbody>
    <% @video.actors.each do |actor| %>
      <tr class="active">
        <td>#</td>
        <td><%= actor.id %></td>
        <td><%= link_to actor.name, actor_path(actor) %></td>
        <td><%= actor.actor_label.upcase %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<h2>Video Info</h2>
<div class="row">
  <div class="col-md-6">
    <div class="panel panel-primary">
      <div class="panel-heading">Release Date</div>
      <div class="panel-body">
        <%= @video.release_date %>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="panel panel-primary">
      <div class="panel-heading">Maker</div>
      <div class="panel-body">
        <%= @video.maker %>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="panel panel-primary">
      <div class="panel-heading">Length</div>
      <div class="panel-body">
        <%= @video.length %>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="panel panel-primary">
      <div class="panel-heading">Director</div>
      <div class="panel-body">
        <%= @video.director %>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="panel panel-primary">
      <div class="panel-heading">Rating</div>
      <div class="panel-body">
        <%= video_rating_format(@video.rating) %>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="panel panel-primary">
      <div class="panel-heading">Lable</div>
      <div class="panel-body">
        <%= @video.label %>
      </div>
    </div>
  </div>

</div>
